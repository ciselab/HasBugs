FROM haskell:9.0.2

WORKDIR /build
COPY . .

RUN sed -i "s/tasty\-hslua\-1\.0\.0/tasty\-hslua\-1\.0\.2/" stack.yaml
RUN sed -i "s/tasty\-lua\-1\.0\.0/tasty\-lua\-1\.0\.2/" stack.yaml

RUN cabal update
RUN cabal install --only-dependencies 
RUN cabal configure --enable-tests
RUN cabal build
RUN cabal test


