FROM haskell:8.10.7

LABEL maintainer="L.H.Applis@tu-delft.nl"
LABEL org.opencontainers.image.source https://github.com/ciselab/hasbugs
LABEL vcs="https://github.com/ciselab/hasbugs/"
LABEL url="https://github.com/ciselab/hasbugs/"

WORKDIR /build
COPY . .

RUN cabal update
RUN cabal v2-build Cabal-syntax cabal-install cabal-testsuite
ENTRYPOINT ["dist-newstyle/build/x86_64-linux/ghc-8.10.7/cabal-testsuite-3/build/cabal-tests/cabal-tests --with-cabal dist-newstyle/build/x86_64-linux/ghc-8.10.7/cabal-install-3.9.0.0/x/cabal/build/cabal/cabal cabal-testsuite/PackageTests/Regression/T8507/cabal.test.hs"]